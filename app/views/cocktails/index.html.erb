<div class="container">
  <h1 class="text-center">Famous Cocktails</h1>
  <div>
    <%= link_to 'Add Cocktail', new_cocktail_path %>
  </div>
  <ul class="mt-3">
    <% @cocktails.each do |cocktail| %>
      <li>
        <%= link_to cocktail_path(cocktail) do %>
          <%= cl_image_tag(cocktail.photo.key, height: 300, width: 400, crop: :fill) if cocktail.photo.attached? %>
          <p><%= cocktail.name %></p> 
        <% end %>
      </li>
    <% end %>
  </ul>

</div>